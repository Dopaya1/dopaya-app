---
import { getProjectImageUrl } from '../../lib/imageUtils.ts';
import { t, getLocaleUrl } from '../../lib/i18n.ts';
import type { Locale } from '../../lib/translations.ts';

interface RelatedCombo {
  slug: string;
  label: string;
}

interface Props {
  locale: Locale;
  formula3: any;
  brand: any;
  impactProjects: any[];
  brandRewards: any[];
  relatedCombos: RelatedCombo[];
}

const { locale, formula3, brand, impactProjects, brandRewards, relatedCombos } = Astro.props;

const brandName = (brand && brand.name) || formula3.brand.name;
const productCategory = formula3.category.name;
const rewardTypeName = formula3.rewardType.name;
const benefitModifier = formula3.benefitModifier;

const brandWebsite = (brand && ((brand as any).website_url ?? (brand as any).websiteUrl ?? (brand as any).website)) || formula3.brand.website || null;
const brandLogoUrl = (brand && ((brand as any).logo_url || (brand as any).logoUrl)) || (formula3.brand as any).logo || null;
const brandDescription = (brand && (brand as any).description) || (formula3.brand as any).description || '';

const categoryLabels: Record<string, string> = {
  clothing: 'Sustainable clothing',
  shoes: 'Sustainable shoes',
  accessories: 'Accessories',
  handbags: 'Handbags',
  'outdoor-gear': 'Outdoor gear',
  'outdoor gear': 'Outdoor gear',
  'athletic-wear': 'Athletic wear',
  'athletic wear': 'Athletic wear',
  'home-goods': 'Home goods',
  'home goods': 'Home goods',
  'lifestyle-products': 'Lifestyle products',
  'lifestyle products': 'Lifestyle products',
};
const brandCategories = formula3.brand.categories && Array.isArray(formula3.brand.categories)
  ? formula3.brand.categories.map((c: string) => categoryLabels[c] || c)
  : [];

const mainSiteBase = locale === 'de' ? 'https://dopaya.com/de' : 'https://dopaya.com';
const mainSiteProjects = `${mainSiteBase}/projects`;
const mainSiteRewards = `${mainSiteBase}/rewards`;
const mainSiteBrands = `${mainSiteBase}/brands`;
const mainSiteHome = mainSiteBase;
---

<!-- Hero Section -->
<section class="pt-14 md:pt-24 pb-12 md:pb-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="text-left">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 leading-normal mb-6 font-heading">
          {t(locale, 'hero.formula3TitleSupport')}<br />
          {t(locale, 'hero.formula3TitleEarn')} <span class="text-brand-orange">{brandName} {productCategory} {rewardTypeName}</span>
        </h1>
        <p class="text-lg md:text-xl text-gray-600 mb-8 max-w-xl">
          {t(locale, 'hero.formula3Subtitle', { brandName })}
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href={mainSiteProjects} class="inline-flex items-center justify-center px-6 py-3 rounded-md bg-brand-orange text-white font-medium hover:opacity-90 transition-opacity text-sm">
            {t(locale, 'hero.startSupportingArrow')}
          </a>
          <a href={mainSiteRewards} class="inline-flex items-center justify-center px-6 py-3 rounded-md border border-gray-300 text-gray-700 font-medium hover:border-brand-orange hover:text-brand-orange transition-colors text-sm">
            {t(locale, 'hero.viewRewards')}
          </a>
        </div>
        <p class="mt-4 text-sm text-gray-600 font-medium">
          {t(locale, 'hero.donateDisclaimer')}
        </p>
      </div>
      <div class="relative h-[400px] md:h-[500px]">
        {brandLogoUrl && (
          <div class="absolute top-0 left-1/2 -translate-x-1/2 w-48 h-48 bg-white rounded-2xl shadow-lg p-6 border-2 border-gray-200">
            <img src={brandLogoUrl} alt={brandName} class="w-full h-full object-contain" onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'w-full h-full flex items-center justify-center\'><span class=\'text-4xl font-bold text-brand-orange\'>' + (this.alt || '?').charAt(0) + '</span></div>';" />
          </div>
        )}
        {brandRewards[0] && (brandRewards[0].imageUrl || brandRewards[0].image_url) ? (
          <div class="absolute top-16 right-0 w-40 h-40 bg-white rounded-2xl shadow-lg p-2 border-2 border-gray-200">
            <img src={brandRewards[0].imageUrl || brandRewards[0].image_url} alt={brandRewards[0].title} class="w-full h-full object-cover rounded-xl" onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1607082348824-0a96f2a4b9da?w=400&h=400&fit=crop&q=80';" />
            <span class="absolute -bottom-2 left-1/2 -translate-x-1/2 text-[11px] bg-white px-2 py-0.5 rounded border border-gray-200 text-gray-800 whitespace-nowrap">
              {t(locale, 'hero.rewardFromBrand', { brandName })}
            </span>
          </div>
        ) : brandLogoUrl ? (
          <div class="absolute right-2 top-8">
            <div class="relative group cursor-pointer">
              <div class="w-32 h-32 rounded-full bg-white ring-4 ring-orange-100 flex items-center justify-center p-4 transition-transform duration-300 group-hover:scale-110">
                <img src={brandLogoUrl} alt={`${brandName} logo`} class="max-w-full max-h-full object-contain" onerror="this.onerror=null; this.parentElement.innerHTML='<span class=\'text-2xl font-bold text-brand-orange\'>' + (this.alt || '?').charAt(0) + '</span>';" />
              </div>
              <span class="absolute -bottom-2 left-1/2 -translate-x-1/2 text-[11px] bg-white px-2 py-0.5 rounded border border-gray-200 text-gray-800 whitespace-nowrap">
                {t(locale, 'hero.rewardPartner')}
              </span>
            </div>
          </div>
        ) : (
          <div class="absolute right-2 top-8">
            <div class="relative group cursor-pointer">
              <div class="w-32 h-32 rounded-full bg-white ring-4 ring-orange-100 flex items-center justify-center p-4 transition-transform duration-300 group-hover:scale-110">
                <span class="text-2xl font-bold text-brand-orange">{brandName.charAt(0)}</span>
              </div>
              <span class="absolute -bottom-2 left-1/2 -translate-x-1/2 text-[11px] bg-white px-2 py-0.5 rounded border border-gray-200 text-gray-800 whitespace-nowrap">{brandName}</span>
            </div>
          </div>
        )}
        {impactProjects[0] && (
          <div class="absolute bottom-8 left-8 w-40 h-40 bg-white rounded-2xl shadow-lg p-2 border-2 border-gray-200">
            {getProjectImageUrl(impactProjects[0]) ? (
              <img src={getProjectImageUrl(impactProjects[0])} alt={impactProjects[0].title} class="w-full h-full object-cover rounded-xl" onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1497486751825-1233686d5d80?w=400&h=400&fit=crop&q=80';" />
            ) : (
              <div class="w-full h-full bg-orange-100 rounded-xl flex items-center justify-center"><span class="text-3xl font-bold text-brand-orange">{impactProjects[0].title.charAt(0)}</span></div>
            )}
          </div>
        )}
        {impactProjects[1] && (
          <div class="absolute top-1/2 right-4 w-36 h-36 bg-white rounded-2xl shadow-lg p-2 border-2 border-gray-200 -translate-y-1/2">
            {getProjectImageUrl(impactProjects[1]) ? (
              <img src={getProjectImageUrl(impactProjects[1])} alt={impactProjects[1].title} class="w-full h-full object-cover rounded-xl" onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1497486751825-1233686d5d80?w=400&h=400&fit=crop&q=80';" />
            ) : (
              <div class="w-full h-full bg-orange-100 rounded-xl flex items-center justify-center"><span class="text-2xl font-bold text-brand-orange">{impactProjects[1].title.charAt(0)}</span></div>
            )}
          </div>
        )}
        {impactProjects[2] && (
          <div class="absolute bottom-4 right-24 w-32 h-32 bg-white rounded-2xl shadow-lg p-2 border-2 border-gray-200">
            {getProjectImageUrl(impactProjects[2]) ? (
              <img src={getProjectImageUrl(impactProjects[2])} alt={impactProjects[2].title} class="w-full h-full object-cover rounded-xl" onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1497486751825-1233686d5d80?w=400&h=400&fit=crop&q=80';" />
            ) : (
              <div class="w-full h-full bg-orange-100 rounded-xl flex items-center justify-center"><span class="text-2xl font-bold text-brand-orange">{impactProjects[2].title.charAt(0)}</span></div>
            )}
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<!-- How It Works -->
<section class="py-20 md:py-28 bg-gray-50">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-semibold text-gray-900 mb-4 font-heading text-center">
      {t(locale, 'howItWorks.title')}
    </h2>
    <p class="text-lg text-gray-600 text-center max-w-2xl mx-auto mb-16">
      {t(locale, 'howItWorks.subtitle')}
    </p>
    <div class="relative">
      <div class="hidden md:block absolute top-24 left-0 right-0 h-0.5 bg-gray-200" style="z-index: 0;"></div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-6 relative" style="z-index: 1;">
        <div class="group relative bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-md hover:border-orange-100 transition-all duration-300">
          <div class="flex flex-col items-center text-center">
            <div class="w-14 h-14 rounded-2xl bg-white border-2 border-brand-orange flex items-center justify-center mb-6 shadow-sm group-hover:shadow-md transition-shadow">
              <span class="text-2xl font-bold text-brand-orange">1</span>
            </div>
            <h3 class="font-semibold text-xl text-gray-900 mb-3 font-heading">{t(locale, 'howItWorks.support')}</h3>
            <p class="text-gray-600 text-sm leading-relaxed">{t(locale, 'howItWorks.step1Text')}</p>
          </div>
        </div>
        <div class="group relative bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-md hover:border-orange-100 transition-all duration-300">
          <div class="flex flex-col items-center text-center">
            <div class="w-14 h-14 rounded-2xl bg-white border-2 border-brand-orange flex items-center justify-center mb-6 shadow-sm group-hover:shadow-md transition-shadow">
              <span class="text-2xl font-bold text-brand-orange">2</span>
            </div>
            <h3 class="font-semibold text-xl text-gray-900 mb-3 font-heading">{t(locale, 'howItWorks.earnPoints')}</h3>
            <p class="text-gray-600 text-sm leading-relaxed">{t(locale, 'howItWorks.step2Text')}</p>
          </div>
        </div>
        <div class="group relative bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-md hover:border-orange-100 transition-all duration-300">
          <div class="flex flex-col items-center text-center">
            <div class="w-14 h-14 rounded-2xl bg-white border-2 border-brand-orange flex items-center justify-center mb-6 shadow-sm group-hover:shadow-md transition-shadow">
              <span class="text-2xl font-bold text-brand-orange">3</span>
            </div>
            <h3 class="font-semibold text-xl text-gray-900 mb-3 font-heading">{t(locale, 'howItWorks.redeem')}</h3>
            <p class="text-gray-600 text-sm leading-relaxed">
              {t(locale, 'howItWorks.step3Text', { rewardTypeName, brandName, productCategory })}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Social Enterprises -->
<section id="featured-projects" class="py-16 md:py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-semibold text-gray-900 mb-4 font-heading">
        {t(locale, 'sections.featuredProjects')}
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {t(locale, 'sections.featuredProjectsSub', { brandName })}
      </p>
    </div>
    {impactProjects.length > 0 && (
      <>
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
          {impactProjects.slice(0, 8).map((project) => (
            <div class="bg-white border-2 border-gray-200 rounded-lg overflow-hidden flex flex-col h-full hover:shadow-lg transition-all duration-300">
              <div class="w-full h-48 overflow-hidden">
                {getProjectImageUrl(project) ? (
                  <img src={getProjectImageUrl(project)} alt={project.title} class="w-full h-full object-cover" onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1497486751825-1233686d5d80?w=400&h=192&fit=crop&q=80';" />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-orange-100 to-amber-100 flex items-center justify-center">
                    <span class="text-4xl font-bold text-brand-orange">{project.title.charAt(0)}</span>
                  </div>
                )}
              </div>
              <div class="p-4 flex-grow">
                <span class="inline-block mb-2 px-2 py-0.5 text-xs font-medium rounded-full bg-gray-100 text-gray-800">{project.category}</span>
                <h3 class="text-lg font-semibold text-gray-900 font-heading mb-2">{project.title}</h3>
                <p class="text-sm text-gray-600 mb-2 line-clamp-3 leading-relaxed">
                  {project.missionStatement || project.mission_statement || project.summary || project.description}
                </p>
              </div>
              <div class="p-4 pt-0 mt-auto">
                <a href={`https://dopaya.com/project/${project.slug}`} class="inline-flex items-center justify-center w-full px-4 py-2 rounded-md text-sm font-medium bg-orange-100 text-gray-900 hover:bg-orange-200 transition-colors border border-orange-200">
                  {t(locale, 'sections.viewProject')}
                </a>
              </div>
            </div>
          ))}
        </div>
        <div class="mt-10 text-center">
          <a href={mainSiteProjects} class="inline-flex items-center justify-center px-6 py-3 rounded-md border border-brand-orange text-brand-orange font-medium hover:bg-brand-orange hover:text-white transition-all text-sm">
            {t(locale, 'sections.seeAllSocialEnterprises')}
          </a>
        </div>
      </>
    )}
  </div>
</section>

<!-- Brand Rewards Section -->
<section class="py-16 md:py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-semibold text-gray-900 mb-4 font-heading">
        {t(locale, 'sections.yourRewardsAt', { brandName })}
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {t(locale, 'sections.yourRewardsAtSub', { rewardTypeName, brandName, productCategory })}
      </p>
    </div>
    <div class="grid gap-6" style="grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));">
      {brandRewards.length > 0 ? (
        <>
          {brandRewards.map((reward) => (
            <div class="bg-white border border-gray-200 rounded-xl overflow-hidden hover:shadow-md transition-all duration-300 hover:border-orange-200">
              {(reward.imageUrl || reward.image_url) && (
                <div class="relative aspect-[4/3] bg-gray-50">
                  <img src={reward.imageUrl || reward.image_url} alt={reward.title} class="w-full h-full object-cover" onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1607082348824-0a96f2a4b9da?w=400&h=300&fit=crop&q=80';" />
                  {brandLogoUrl && (
                    <div class="absolute top-3 right-3 bg-white rounded-lg p-2 shadow-sm">
                      <img src={brandLogoUrl} alt={brandName} class="h-5 w-auto object-contain" onerror="this.onerror=null; this.style.display='none';" />
                    </div>
                  )}
                </div>
              )}
              <div class="p-5 space-y-3">
                <div>
                  <h3 class="font-semibold text-lg mb-1">{reward.title}</h3>
                  <p class="text-sm text-gray-600 line-clamp-2">{reward.description}</p>
                </div>
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-xs text-gray-500">{t(locale, 'sections.requires')}</p>
                    <p class="text-xl font-bold text-gray-900">
                      {reward.pointsCost} <span class="text-sm font-normal text-gray-600">{t(locale, 'sections.points')}</span>
                    </p>
                  </div>
                  {reward.retail_value && (
                    <div class="text-right">
                      <p class="text-xs text-gray-500">{t(locale, 'sections.value')}</p>
                      <p class="text-base font-semibold text-green-600">{reward.retail_value}</p>
                    </div>
                  )}
                </div>
                {brand && (
                  <p class="text-sm text-gray-500">
                    {t(locale, 'sections.brandLabel')} <span class="font-medium text-gray-900">{brandName}</span>
