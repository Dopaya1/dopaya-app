              <div class="w-14 h-14 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-7 h-7 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path></svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">{t(locale, 'sections.exploreAllRewards')}</h3>
              <p class="text-sm text-gray-600 mb-4">{t(locale, 'sections.exploreAllRewardsSub', { brandName })}</p>
              <a href={mainSiteRewards} class="inline-block px-4 py-2 rounded-md text-sm font-medium bg-orange-100 text-gray-900 hover:bg-orange-200 transition-colors border border-orange-200">
                {t(locale, 'sections.seeAllRewards')}
              </a>
            </div>
          </div>
        </>
      ) : (
        <div class="text-center bg-white rounded-2xl p-10 border border-gray-200 col-span-full">
          <p class="text-base text-gray-700 mb-5">
            {t(locale, 'sections.rewardsComingSoon', { brandName })}
          </p>
          <a href={mainSiteRewards} class="inline-block px-4 py-2 rounded-md text-sm font-medium bg-orange-100 text-gray-900 hover:bg-orange-200 transition-colors border border-orange-200">
            {t(locale, 'sections.seeAllRewards')}
          </a>
        </div>
      )}
    </div>

    <!-- Brand Info Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-16">
      <div class="bg-white rounded-3xl p-8 md:p-12 border border-gray-200 shadow-sm">
        <div class="flex items-start gap-6 mb-6">
          {brandLogoUrl ? (
            <div class="flex-shrink-0">
              <img src={brandLogoUrl} alt={brandName} class="h-20 w-auto object-contain bg-white p-3 rounded-xl border border-gray-200" onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'h-20 w-20 bg-white rounded-xl border border-gray-200 flex items-center justify-center\'><span class=\'text-3xl font-bold text-brand-orange\'>' + (brandName || '?').charAt(0) + '</span></div>';" />
            </div>
          ) : (
            <div class="flex-shrink-0 h-20 w-20 bg-white rounded-xl border border-gray-200 flex items-center justify-center">
              <span class="text-3xl font-bold text-brand-orange">{brandName.charAt(0)}</span>
            </div>
          )}
          <div class="flex-1">
            <h3 class="text-3xl font-semibold text-gray-900 mb-2">{brandName}</h3>
            {brand && (brand.category || brand.country) && (
              <p class="text-base text-gray-600 mb-3">{brand.category || 'Sustainable Brand'} ‚Ä¢ {brand.country || 'üåç Global'}</p>
            )}
            <div class="flex flex-wrap gap-2">
              {formula3.brand.sustainability && Object.entries(formula3.brand.sustainability).map(([key, value]) =>
                value && (
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
                    {key === 'treePlanting' && 'üå≥ Tree Planting'}
                    {key === 'carbonNeutral' && '‚ôªÔ∏è Carbon Neutral'}
                    {key === 'fairTrade' && 'ü§ù Fair Trade'}
                    {key === 'circular' && 'üîÑ Circular Economy'}
                    {key === 'organic' && 'üåø Organic Materials'}
                    {key === 'ethical' && '‚ú® Ethical Production'}
                    {key === 'recycled' && '‚ôªÔ∏è Recycled Materials'}
                    {key === 'durable' && 'üí™ Durable Design'}
                    {key === 'localProduction' && 'üèîÔ∏è Local Production'}
                    {key === 'waterSaving' && 'üíß Water Saving'}
                    {key === 'innovation' && 'üí° Innovation'}
                    {key === 'oceanPlastic' && 'üåä Ocean Plastic'}
                  </span>
                )
              )}
            </div>
          </div>
        </div>
        <div class="space-y-6">
          <div>
            <h4 class="text-xl font-semibold text-gray-900 mb-3">{t(locale, 'sections.aboutBrand', { brandName })}</h4>
            <p class="text-base text-gray-700 leading-relaxed mb-4">{brandDescription || formula3.brand.description}</p>
            <div class="grid md:grid-cols-2 gap-6 mt-6">
              <div class="bg-white rounded-xl p-6 border border-gray-200">
                <h5 class="font-semibold text-gray-900 mb-3 flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                  {t(locale, 'sections.whyBrand', { brandName })}
                </h5>
                <p class="text-sm text-gray-600 leading-relaxed">
                  {t(locale, 'sections.whyBrandText', { brandName, productCategory })}
                </p>
              </div>
              <div class="bg-white rounded-xl p-6 border border-gray-200">
                <h5 class="font-semibold text-gray-900 mb-3 flex items-center">
                  <svg class="w-5 h-5 mr-2 text-brand-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                  {t(locale, 'sections.impactPartnership')}
                </h5>
                <p class="text-sm text-gray-600 leading-relaxed">
                  {t(locale, 'sections.impactPartnershipText', { brandName })}
                </p>
              </div>
              {brandRewards.length > 0 && (
